<h4>
	<%= content_tag :div, class: 'media', id: "item-#{item.id}" do %>
			<div class="id-#{item.id}">

				<div class="container">
								<%= item.distance_of_time_in_words(item.created_at, item.created_at + 7.days ) %> Left &nbsp |
								<%= link_to "", [@user, item], method: :delete, class: 'glyphicon glyphicon-ok', remote: true %> |
								&nbsp; <%= item.name %>
				</div>
				<br>
			</div>
	<% end %>	
</h4>

